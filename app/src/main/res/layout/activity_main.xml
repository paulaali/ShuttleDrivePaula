<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawerLay"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/A2"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/editTextTextPersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:ems="10"
                android:fontFamily="@font/roboto_slab_bold"
                android:gravity="center"
                android:inputType="textPersonName"
                android:padding="3dp"
                android:text="Our Offers "
                android:textColor="@color/black"
                android:textSize="35dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="80dp">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:src="@raw/b5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/bus_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="9"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="Hot deals"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/vals_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="80dp">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:src="@raw/vals"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/vals_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="9"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="Vals day package "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/car_deal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="80dp">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:src="@raw/c6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/best_car_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="9"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="Car Deals "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/xmas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="80dp">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:src="@raw/xmas"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/xmas_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="9"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="Xmas  package "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp" />


        </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/drawer_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>

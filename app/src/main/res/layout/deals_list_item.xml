<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/booking_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_image_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="250dp">

            <ImageView
                android:id="@+id/shuttleItemImg"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher_foreground" />

        </androidx.cardview.widget.CardView>


        <!--Creating a TextView for name-->
        <TextView
            android:id="@+id/listName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/profile_image_root"
            android:gravity="center"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/listType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/listName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/profile_image_root"
            android:gravity="center"
            android:text="AC/Non-AC"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/listfare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/listType"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/profile_image_root"
            android:gravity="center"
            android:text="Fare"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>